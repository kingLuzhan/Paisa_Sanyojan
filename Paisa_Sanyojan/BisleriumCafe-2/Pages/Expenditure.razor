@page "/Expenditure"
@using BisleriumCafe.Services
@using BisleriumCafe.Model
@inject NavigationManager NavManager
@inject LoginService LoginService

<div class="main-content">
    <h2>Add Cash Expenditure:</h2>
    <button class="open-form-button" @onclick="ShowForm">+ Add Expense</button>

    @if (isFormVisible)
    {
        <div class="popup-form-overlay">
            <div class="popup-form">
                <h3>Add New Expenditure</h3>
                <form>
                    <div class="form-group">
                        <label for="amount">Amount:</label>
                        <input type="text" @bind="Amount" name="amount" placeholder="Enter amount" />

                        
                    </div>
                    <div class="form-group">
                        <label for="date">Date:</label>
                        <input type="date" @bind="Date" name="date" />

                        <label for="source">Source:</label>
                        <input type="text" @bind="Source" name="source" placeholder="Enter source" />
                    </div>
                    <div class="form-group">
                        <label for="tag">Tag:</label>
                        <select @bind="Tag">
                            <option value="" disabled selected>Select tag</option>
                            @foreach (var i in Management_List.tgs)
                            {
                                <option value="@i.Name">@i.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="note">Notes:</label>
                        <textarea id="note" @bind="Note" placeholder="Enter additional notes"></textarea>
                    </div>
                    <div class="form-buttons">
                        <button type="button" class="submit-button" @onclick="submit_button">Add Expense</button>
                        <button type="button" class="cancel-button" @onclick="CloseForm">Cancel</button>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(SuccessMessage))
                {
                    <p class="success-message">@SuccessMessage</p>
                }
            </div>
        </div>
    }

    <h3>Expense Records</h3>
    @if (Management_List.expenditureList.Count > 0)
    {
        <table class="expense-table">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Source</th>
                    <th>Tag</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Management_List.expenditureList)
                {
                    <tr>
                        <td>@expense.Amount</td>           
                        <td>@expense.Date.ToShortDateString()</td>
                        <td>@expense.Source</td>
                        <td>@expense.Tag</td>
                        <td>@expense.Note</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expenses added yet.</p>
    }
</div>

<style>
    .main-content {
        text-align: center;
        padding: 20px;
    }

    .open-form-button {
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #0078d4;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .open-form-button:hover {
            background-color: #005a9e;
        }

    .popup-form-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .popup-form {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        width: 90%;
        max-width: 500px;
        max-height: 75%;
        overflow-y: auto;
    }

        .popup-form h3 {
            margin-bottom: 15px;
            font-size: 1.5rem;
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #555;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

    .form-buttons {
        display: flex;
        justify-content: space-between;
        gap: 10px;
    }

    .submit-button {
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .submit-button:hover {
            background-color: #218838;
        }

    .cancel-button {
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .cancel-button:hover {
            background-color: #c82333;
        }

    .success-message {
        margin-top: 10px;
        color: #28a745;
        font-weight: bold;
    }

    .expense-table {
        margin: 20px auto;
        width: 90%;
        max-width: 800px;
        border-collapse: collapse;
    }

        .expense-table th, .expense-table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        .expense-table th {
            background-color: #f8f9fa;
            color: #333;
        }

        .expense-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>
@code {
    double Amount;
    DateOnly Date;
    string Source;
    string Tag;
    string Note;
    string SuccessMessage;
    bool isFormVisible = false;

    private double userBalance; // Declare user balance here

    void ShowForm()
    {
        isFormVisible = true;
    }

    void CloseForm()
    {
        isFormVisible = false;
        ClearForm();
    }

    void ClearForm()
    {
        Amount = 0;
        Date = default;
        Source = string.Empty;
        Tag = string.Empty;
        Note = string.Empty;
        SuccessMessage = string.Empty;
    }

    void submit_button()
    {
        // Check if the expenditure exceeds the user's balance
        if (Amount > userBalance)
        {
            SuccessMessage = "Insufficient balance to add this expenditure.";
            return;
        }

        if (string.IsNullOrWhiteSpace(Tag))
        {
            SuccessMessage = "Please select a valid tag.";
            return;
        }

        var expenditures = new expenditure(Source, Amount, Date, Tag, Note);
        Management_List.expenditureList.Add(expenditures);

        jsonController.AddDataToJSONFile(Management_List.expenditureList, "C:\\Users\\user\\source\\repos\\BisleriumCafe\\expenditure.json");

        SuccessMessage = "Expenditure added successfully!";
        CloseForm();
    }
}
